<div class="container main-content">
  <div class="row">
    <%= render @dashboard.timeline %>
    
    <div class="col-6">
      <div class="tweet-card pr-5 pl-5 mt-5">
        <%= shout_form_for(TextShout) do |form| %>
          <div class="form-group row">
          <%= form.text_field :body, placeholder: "shout here!", required: true, class: "form-control col-8" %>
          <%= form.submit("Shout!", class: "btn btn-primary col-4") %>
          </div>
        <% end %>

        <%= shout_form_for(PhotoShout) do |form| %>
          <div class="form-group row">
          <%= form.file_field :image, required: true, class: "form-control-file col-8" %>
          <%= form.submit("Shout!", class: "btn btn-primary col-4") %>
          </div>
        <% end %>
      </div>

    <%= render @dashboard.timeline %>
    </div>
  </div>
</div>
