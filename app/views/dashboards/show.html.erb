<h1>Dashboard</h1>

<%= form_for @shout do |form| %>
    <%= form.hidden_field :content_type, value: "TextShot" %>
    <%= form.fields_for :content do |content_form| %>
        <%= content_form.text_field :body, placehoder: "shout here!", required: true %>
    <% end %>
    <%= form.submit "Shout!" %>
<% end %>

<%= form_for @shout do |form| %>
    <%= form.hidden_field :content_type, value: "PhotoShout" %>
    <%= form.fields_for :content do |content_form| %>
        <%= content_form.file_field :image, required: true %>
    <% end %>
    <%= form.submit "Shout!" %>
<% end %>

<%= render @shouts %>
